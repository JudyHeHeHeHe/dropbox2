


 <div class="container">

      <div class="row row-offcanvas row-offcanvas-right">

        

        <div class="col-xs-12 col-sm-9">
          <div class="jumbotron">
            <h1>Welcome Back</h1>
            <p>This is an example to show how "Dropbox" works.</p>
            <div id="sidebar-mobile">
          <div class="list-group-mobile">
          <ul>
            <li><%=link_to 'Upload', new_user_picture_path(@user), {class: 'list-group-mobile-item'} %></li>
            <li><%=link_to 'Edit User', edit_user_path(@user), {class: 'list-group-mobile-item'} %></li>
            <li><%=link_to 'Log Out', root_path, {class: 'list-group-mobile-item'} %></li>
          </ul>
          </div>
        </div><!--/.sidebar-offcanvas-->
          </div>



          <div class="row">
            <div class="">
               <% if @pictures.length==0 %>
<p>No pictures found</p>
<% else %>
<table class='table table-bordered'>
<% @pictures.each do |picture| %>
<tr>
  <td>
    <img width='120' height='100' src='/images/<%=picture.savefilename%>' class='img-responsive' alt='picture'/>
  </td>
  <td>
    <%=picture.description %>
  </td>
  <td>
    <%=link_to 'edit', edit_user_picture_path(@user, picture) %>
  </td>
  <td>
    <%=link_to 'delete', [@user, picture], method: :delete, data:{confirm: 'are you sure'} %>
  </td>
</tr>
<% end %>
</table>
<% end %>
            </div><!--/.col-xs-6.col-lg-4-->
           
          </div><!--/row-->
        </div><!--/.col-xs-12.col-sm-9-->

        <div class="col-xs-12 col-sm-3 sidebar-offcanvas" id="sidebar-desktop">
          <div class="list-group">
            <%=link_to 'Upload Picture', new_user_picture_path(@user), {class: 'list-group-item'} %>
            <%=link_to 'Edit User', edit_user_path(@user), {class: 'list-group-item'} %>
            <%=link_to 'Log Out', root_path, {class: 'list-group-item'} %>
          </div>
        </div><!--/.sidebar-offcanvas-->

      </div><!--/row-->

  

    </div><!--/.container-->