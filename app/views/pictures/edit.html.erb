<h1>Edit Description <small><%=@picture.savefilename %></small></h1>




<%=form_for [@user, @picture] do |f| %>
<div class='form-group'>
  <label>Description</label>
  <%=f.text_area :description, {:rows=> 4, :maxlength => '140', :class => "form-control input-md"} %>
</div>
<div class='form-group'>
  <div class='col-sm-offset-2 col-sm-10'>
  <%=link_to 'Back', user_pictures_path, {:class=> 'form-back'} %>
  <%=f.submit 'submit', class: 'btn btn-primary btn-sm' %>
    
  </div>
</div>
<% end %>
